<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="335dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="X"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/close_bg"
        android:id="@+id/txt_close"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:layout_gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:background="@drawable/contact_form"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:id="@+id/contact_family_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاسم"
                android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:id="@+id/contact_family_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="البريد الالكترونى" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:id="@+id/contact_with_family_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="عنوان الرسالة"
                android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:id="@+id/contact_with_family_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="النص" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/contact_with_family_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_background"
            android:text="ارسال" />

    </LinearLayout>

</LinearLayout>